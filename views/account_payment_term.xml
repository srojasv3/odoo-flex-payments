<odoo>
    <record id="horeca_account_payment_term_form" model="ir.ui.view">
        <field name="name">horeca.account.payment.term.form</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_on_invoice']" position="after">
                <group>
                    <field name="applicable_user_levels" widget="many2many_tags" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
